    <div id="player"></div>
    
    <div class="nav-tabs" id="categoryBox">
        </div>

    <div class="list-grid" id="list">
        </div>

    <div class="warning">
        提示：部分海外或成人频道可能需要特殊网络环境。本页面仅供测试。
    </div>
</div>

<script>
// 严格遵守“西瓜影视”范本逻辑的数据结构
const TV_DATA = {
    "央视频道": [
        { name: "CCTV-1 综合", url: "http://39.134.115.163:8080/PLTV/88888910/224/3221225618/index.m3u8" },
        { name: "CCTV-5 体育", url: "http://39.134.115.163:8080/PLTV/88888910/224/3221225658/index.m3u8" },
        { name: "CCTV-13 新闻", url: "http://39.134.115.163:8080/PLTV/88888910/224/3221225631/index.m3u8" }
    ],
    "省市卫视": [
        { name: "湖南卫视", url: "http://ottrrs.hljtv.com/live/hnws/index.m3u8" },
        { name: "浙江卫视", url: "http://ottrrs.hljtv.com/live/zjws/index.m3u8" },
        { name: "东方卫视", url: "http://ottrrs.hljtv.com/live/dfws/index.m3u8" }
    ],
    "台湾频道": [
        { name: "TVBS 新闻", url: "https://edges.mixlr.com/channel/tvbs_news/index.m3u8" },
        { name: "中天新闻", url: "https://ctitv-ctinews-hls.akamaized.net/hls/live/2034963/ctinews/playlist.m3u8" }
    ],
    "成人频道": [
        { name: "测试频道1(密)", url: "替换为你自己的私密直播源URL" },
        { name: "测试频道2(密)", url: "替换为你自己的私密直播源URL" }
    ]
};

let dp = new DPlayer({
    container: document.getElementById('player'),
    live: true,
    autoplay: true,
    video: { url: TV_DATA["央视频道"][0].url, type: 'hls' }
});

function init() {
    const categoryBox = document.getElementById('categoryBox');
    Object.keys(TV_DATA).forEach((cat, index) => {
        const btn = document.createElement('button');
        btn.className = `tab-btn ${index === 0 ? 'active' : ''}`;
        btn.innerText = cat;
        btn.onclick = () => {
            document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            renderList(cat);
        };
        categoryBox.appendChild(btn);
    });
    renderList("央视频道");
}

function renderList(cat) {
    const listBox = document.getElementById('list');
    listBox.innerHTML = '';
    TV_DATA[cat].forEach(item => {
        const div = document.createElement('div');
        div.className = 'list-item';
        div.innerText = item.name;
        div.onclick = () => {
            dp.switchVideo({ url: item.url, type: 'hls' });
            dp.play();
            window.scrollTo({ top: 0, behavior: 'smooth' });
        };
        listBox.appendChild(div);
    });
}

init();
</script>
</body>
</html>
